{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python",
      "type": "python",
      "request": "launch",
      "stopOnEntry": true,
      "pythonPath": "${config.python.pythonPath}",
      "program": "${file}",
      "debugOptions": [
        "WaitOnAbnormalExit",
        "WaitOnNormalExit",
        "RedirectOutput"
      ]
    },
    {
      "name": "Test",
      "type": "python",
      "request": "launch",
      "stopOnEntry": true,
      "pythonPath": "${workspaceRoot}/bin/python",
      "program": "${file}",
      "externalConsole": true,
      "debugOptions": [
        "WaitOnAbnormalExit",
        "WaitOnNormalExit"
      ]
    }
  ]
}